@model MembersIndexVM

<div class="row">
    <div class="col-12 mainLogo">
        <img class="center-block" src="~/images/logo.jpg" />
    </div>
</div>
<div class="row">
    <div class="col px-3">

        <form asp-controller="Members" asp-action="Index" method="post" class="pt-3">
            <div class="form-group row">
                <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                <div class="col">
                    <input asp-for="Email" type="email" class="form-control" id="inputEmail3" placeholder="E-mail">
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Password" class="col-sm-2 col-form-label"></label>
                <div class="col">
                    <input asp-for="Password" type="password" class="form-control" id="inputPassword3" placeholder="Lösenord">
                </div>
            </div>
            <div class="form-group row">
                <div class="col">
                    <div class="form-check">
                        <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="gridCheck1">
                        <label class="form-check-label" asp-for="RememberMe"></label>
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col">
                    <button type="submit" class="btn btn-dark" style="width:50%">Logga in</button>
                </div>
            </div>
        </form>
        <form asp-controller="Members" asp-action="Register" method="get">
            <div class="form-group row">
                <div class="col">
                    <button type="submit" class="btn btn-dark" style="width:50%">Skapa konto</button>
                </div>
            </div>
        </form>
    </div>
</div>
