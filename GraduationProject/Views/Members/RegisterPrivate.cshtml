@model MembersRegisterPrivateVM
@{
    ViewData["Title"] = "RegisterPrivate";
}

<form asp-controller="Members" asp-action="RegisterPrivate" method="post">
    <input asp-for="FirstName" type="text" placeholder="Förnamn" />
    <span asp-validation-for="FirstName"></span>
    <input asp-for="LastName" type="text" placeholder="Efternamn" />
    <span asp-validation-for="LastName"></span>
    <input asp-for="Email" type="text" placeholder="E-mail" />
    <span asp-validation-for="Email"></span>
    <input asp-for="Password" type="password" placeholder="Lösenord" />
    <span asp-validation-for="Password"></span>
    <input asp-for="ConfirmPassword" type="password" placeholder="Bekräfta lösenord" />
    <span asp-validation-for="ConfirmPassword"></span>

    <input type="submit" value="Skapa konto" />
</form>

<form asp-controller="Members" asp-action="Register" method="get">
    <input type="submit" value="Tillbaka" />
</form>