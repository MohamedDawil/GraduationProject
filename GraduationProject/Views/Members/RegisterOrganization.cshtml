@model MembersRegisterOrganizationVM
@{
    ViewData["Title"] = "RegisterOrganization";
}

<form asp-controller="Members" asp-action="RegisterOrganization" method="post">
    <input asp-for="OrgName" type="text" placeholder="Organisationsnamn" />
    <span asp-validation-for="OrgName"></span>
    <br />
    <input asp-for="OrgNumber" type="text" placeholder="Organisationsnummer" />
    <span asp-validation-for="OrgNumber"></span>
    <br />
    <input asp-for="Email" type="text" placeholder="E-mail" />
    <span asp-validation-for="Email"></span>
    <br />
    <input asp-for="Password" type="password" placeholder="Lösenord" />
    <span asp-validation-for="Password"></span>
    <br />
    <input asp-for="ConfirmPassword" type="password" placeholder="Bekräfta lösenord" />
    <span asp-validation-for="ConfirmPassword"></span>
    <br />
    <input type="submit" value="Skapa konto" />
</form>

<form asp-controller="Members" asp-action="Register" method="get">
    <input type="submit" value="Tillbaka" />
</form>