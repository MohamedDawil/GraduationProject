        <form asp-controller="Givers" asp-action="AddProduct" method="post" enctype="multipart/form-data">
    @if (Model.NotFound)
    {
        <p>Varan hittades ej i databasen. Var god ta en bild i stället.</p>
    }
    @if (Model.Link != null)
    {
        <center><img src="@Model.Link" id="output" style="width: 200px; height: auto;" /></center>
        <input type="hidden" asp-for="@Model.Link" />
    }
    else
    {
        <center><img src="@if(Model.Picture != null) { @("/products/"+@Model.Picture) }" id="output" style="width: 200px; height: auto;" /></center>
    }

    <br />
    <label class="btn btn-light productBtn" style="width: 47%;">
        <input asp-for="Picture" type="file" accept="image/*;capture=camera" value="Lägg till bild" onchange="loadFile(event)">
        Lägg till bild
    </label>
    <button id="btn-processSupportAndSettings" class="btn btn-light productBtn" style="width: 47%; border-radius: 25px;background-color: #FF3D64;">Skanna</button>
    @*<label class="btn btn-light productBtn">
            <input asp-for="Scan" type="file" accept="image/*;capture=camera" value="Skanna streckkod">
            <i class="fa fa-cloud-upload"></i> Skanna streckkod
        </label>*@
    <table class="table">
        <tbody>
            <tr>
                <th scope="row" align="left"><label asp-for="ProductName" style="font-size: 1rem;font-family: 'Montserrat', sans-serif;color: #212529;font-weight:bold; text-align:left"></label></th>
                <td>
                    <input asp-for="ProductName" type="text" style="width: 100%;border-style: none;background-color: #dbdbdb;border-radius: 10px;padding: 3px;" placeholder="Varunamn" />
                </td>
            </tr>
            <tr>
                <th scope="row" align="left"><label asp-for="Description" style="font-size: 1rem;font-family: 'Montserrat', sans-serif;color: #212529;font-weight:bold; text-align:left"></label></th>
                <td>
                    <input asp-for="Description" type="text"  style="width: 100%;border-style: none;background-color: #dbdbdb;border-radius: 10px;padding: 3px;" placeholder="ex: antal, mängd" />
                </td>
            </tr>
            <tr>
                <th scope="row" align="left"><label asp-for="Freshness" style="font-size: 1rem;font-family: 'Montserrat', sans-serif;color: #212529;font-weight:bold; text-align:left"></label></th>
                <td>
                    <input asp-for="Freshness" type="range" min="1" max="10"  style="width: 100%;border-style: none;background-color: #dbdbdb;border-radius: 10px;padding: 3px;" placeholder="Fräschhet" />
                </td>
            </tr>
            <tr>
                <th scope="row" align="left"><label asp-for="ExpiryDate" style="font-size: 1rem;font-family: 'Montserrat', sans-serif;color: #212529;font-weight:bold;"></label></th>
                <td>
                    <input asp-for="ExpiryDate" type="date" value="@DateTime.Today.ToString("yyyy-MM-dd")" placeholder="Utgångsdatum"  style="width: 100%;border-style: none;background-color: #dbdbdb;border-radius: 10px;padding: 3px;" data-role="none" />
                </td>
            </tr>
            <tr>
                <th scope="row" align="left"><label asp-for="PickUpDate1" style="font-size: 1rem;font-family: 'Montserrat', sans-serif;color: #212529;font-weight:bold; text-align:left"></label></th>
                <td>
                    <input asp-for="PickUpDate1" type="date" min="@DateTime.Today.ToString("yyyy-MM-dd")" value="@DateTime.Today.ToString("yyyy-MM-dd")"  style="width: 100%;border-style: none;background-color: #dbdbdb;border-radius: 10px;padding: 3px;" placeholder="Hämta tidigast" />
                </td>
            </tr>
            <tr>
                <th scope="row" align="left"><label asp-for="PickUpDate2" style="font-size: 1rem;font-family: 'Montserrat', sans-serif;color: #212529;font-weight:bold; text-align:left"></label></th>
                <td>
                    <input asp-for="PickUpDate2" type="date" min="@DateTime.Today.ToString("yyyy-MM-dd")" value="@DateTime.Today.ToString("yyyy-MM-dd")"  style="width: 100%;border-style: none;background-color: #dbdbdb;border-radius: 10px;padding: 3px;" placeholder="Hämta senast" />
                </td>
            </tr>
            <tr>
                <td colspan="3">
                    <input class="btn-block productBtn" type="submit" value="Lägg till vara" />
                    <p>&nbsp;</p>
                    <p>&nbsp;</p>
                </td>
            </tr>
        </tbody>
    </table>
</form>

