<div class="mesgs">
    <div class="msg_history" id="messagesList">
        @foreach (var bubble in Model.Bubbles)
        {
            @if (bubble.IsSent)
            {
                <div class="outgoing_msg">
                    <div class="sent_msg">
                        <p>
                            @bubble.MemberMessage
                        </p>
                        <span class="time_date">@bubble.PublishDate</span>
                    </div>
                </div>
            }
            else
            {
                <div class="incoming_msg">
                    @if (!bubble.IsServer)
                    {
                        <div class="incoming_msg_img"><img src="~/profiles/@bubble.MemberImage"></div>
                    }
                    <div class="received_msg">
                        <div class="received_withd_msg">
                            <p>
                                @bubble.MemberName
                            </p>
                            <p>
                                @bubble.MemberMessage
                            </p>
                            <span class="time_date">@bubble.PublishDate</span>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
    <input type="hidden" asp-for="SentById" />
    <input type="hidden" asp-for="GiverId" />
    <input type="hidden" asp-for="ReceiverId" />
    <input type="hidden" asp-for="ProductId" />
    <div class="type_msg">
        <div class="input_msg_write">
            <input type="text" class="write_msg" asp-for="SendMessage" placeholder="Skriv meddelande" />
            <button class="msg_send_btn" id="sendButton" type="button"><i class="fas fa-paper-plane" aria-hidden="true"></i></button>
        </div>
    </div>
</div>
<p>&nbsp;</p>
<p>&nbsp;</p>

@section Scripts {
    <script src="~/lib/@@aspnet/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/js/chat.js"></script>
}




